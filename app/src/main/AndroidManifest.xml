<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.haphap.todoapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_todo_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_todo_app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning" >
        <activity android:name=".Feature.User.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Feature.Task.TaskActivity"/>
        <activity android:name=".BaseActivity"/>
        <activity android:name=".Feature.User.RegisterActivity"/>
        <activity android:name=".Feature.Task.AddTaskActivity"/>
    </application>

</manifest>